<h1>ALL POSTS</h1>
{{> home/flash-msg}}

<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td><img src="/uploads/{{file}}" alt="" class="img-circle" height="40px" width="40px" style="object-fit:cover"></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateTime date 'MMM-Do-YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="badge badge-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="badge badge-danger">DELETE</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>